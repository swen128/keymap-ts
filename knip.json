{
  "$schema": "https://unpkg.com/knip@latest/schema.json",
  "entry": [
    "src/index.ts",
    "src/cli.ts"
  ],
  "project": [
    "src/**/*.ts"
  ],
  "ignore": [
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "ignoreDependencies": ["@commitlint/cli"],
  "ignoreExportsUsedInFile": true,
  "eslint": {
    "config": ["eslint.config.js"]
  },
  "typescript": {
    "config": ["tsconfig.json"]
  }
}

