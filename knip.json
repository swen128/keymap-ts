{
  "$schema": "https://unpkg.com/knip@latest/schema.json",
  "workspaces": {
    "packages/keymap-ts": {
      "entry": [
        "src/index.ts",
        "src/cli.ts"
      ],
      "project": [
        "src/**/*.ts"
      ]
    },
    "packages/examples": {
      "entry": [
        "**/index.ts"
      ],
      "project": [
        "**/*.ts"
      ]
    }
  },
  "ignore": [
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "ignoreDependencies": ["@commitlint/cli", "@ryoppippi/unplugin-typia"],
  "ignoreExportsUsedInFile": true,
  "eslint": {
    "config": ["eslint.config.js"]
  },
  "typescript": {
    "config": ["tsconfig.json", "packages/*/tsconfig.json"]
  }
}